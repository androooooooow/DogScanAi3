<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground"
    tools:context="fragment_activity.DogScanResultFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image of the Scanned Dog -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/scanned_dog_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:contentDescription="Scanned Dog" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Top Breed Result -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Top Result"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/top_breed_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Golden Retriever"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/top_breed_accuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="95%"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <ProgressBar
                    android:id="@+id/accuracy_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/top_breed_name"
                    android:layout_marginTop="8dp"
                    android:progress="95"
                    android:progressTint="?attr/colorPrimary" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Other Possible Breeds -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Other Possibilities"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary" />

        <!-- Placeholder for a list of other breeds -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Labrador Retriever - 80%\nGerman Shepherd - 75%\n[This would be a RecyclerView]"
            android:textColor="?android:attr/textColorSecondary"
            android:lineSpacingExtra="8dp"/>

    </LinearLayout>
</ScrollView>
